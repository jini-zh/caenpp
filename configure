#!/bin/bash

usage() {
  cat <<END
Usage: $0 [OPTION]...
Allowed options:
  --help                display this help and exit
  --prefix=PREFIX       install architecture-independent files in PREFIX
                        [$prefix]
  --exec-prefix=EPREFIX install architecture-dependent files in EPREFIX
                        [PREFIX]
  --libdir=DIR          object code libraries [EPREFIX/lib]
  --includedir=DIR      C++ header files [PREFIX/include]
  --without-digitizer   disable support for CAENDigitizer library
END
}

if [[ -z $CXX ]]; then
  CXX=g++
fi

echo "$0 $*" > config.log
exec > >(tee -a config.log)

prefix=/usr/local
exec_prefix=
bindir=
libdir=
includedir=
digitizer=

argv=`(getopt -o '' -l 'help,prefix:,exec-prefix:,libdir:,includedir:,without-digitizer,with-digitizer' -- "$@")` || exit $?
eval "set -- ${argv[*]}"
while [[ $1 != -- ]]; do
  case $1 in
    --help)              usage;            exit;;
    --prefix)            prefix="$2";      shift 2;;
    --exec-prefix)       exec_prefix="$2"; shift 2;;
    --bindir)            bindir="$2"       shift 2;;
    --libdir)            libdir="$2";      shift 2;;
    --includedir)        includedir="$2";  shift 2;;
    --without-digitizer) digitizer=0;      shift;;
    --with-digitizer)    digitizer=1;      shift;;
  esac
done

if [[ -z "$exec_prefix" ]]; then
  exec_prefix="$prefix"
fi

if [[ -z "$bindir" ]]; then
  bindir="$exec_prefix/bin"
fi

if [[ -z "$libdir" ]]; then
  libdir="$exec_prefix/lib"
fi

if [[ -z "$includedir" ]]; then
  includedir="$prefix/include"
fi

if [[ -z $digitizer ]]; then
  echo -n 'Checking for libCAENDigitizer... '
  if $CXX -x c++ -Wl,--no-as-needed -lCAENDigitizer - <<END &> /dev/null; then
#include <CAENDigitizer.h>
int main() {}
END
    echo found
    digitizer=1
  else
    echo not found
    digitizer=0
  fi
  echo
fi

if ((digitizer)); then
  digitizer=digitizer
else
  digitizer=
fi

echo Creating config.mak
cat > config.mak <<END
prefix      := $prefix
exec_prefix := $exec_prefix
bindir      := $bindir
libdir      := $libdir
includedir  := $includedir
digitizer   := $digitizer
END

exec >&-
wait
